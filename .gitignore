# ===========================================
# CodeIgniter & PHP Project .gitignore
# ===========================================

# ===========================================
# Environment & Configuration Files
# ===========================================
.env
.env.local
.env.*.local
*.env
config/database.php
config/config.php.local
config/production/config.php
config/development/config.php
config/testing/config.php

# ===========================================
# Constants Files (may contain sensitive data)
# ===========================================
# Constants files often contain API keys, secrets, and sensitive configuration
# Option 1: Ignore constants files entirely (recommended if they contain secrets)
# Uncomment these lines if constants.php contains sensitive data:
# b2c/config/constants.php
# agent/application/config/constants.php
# supervision/application/config/constants.php

# Option 2: Use environment-specific constants files
*constants.local.php
*constants.production.php
*constants.development.php
constants.php.local
constants.php.example

# Backup/new versions of constants files
*constants_new.php
*constants.backup.php
*constants.old.php
constants.php.bak

# ===========================================
# Logs & Temporary Files
# ===========================================
*.log
logs/*
!logs/index.html
!logs/.htaccess

# Application logs
b2c/logs/*
!b2c/logs/index.html
agent/application/logs/*
!agent/application/logs/index.html
supervision/logs/*
!supervision/logs/.gitkeep

# Flight/Hotel logs
logs/flight/*
logs/hotel/*
!logs/flight/.gitkeep
!logs/hotel/.gitkeep

# ===========================================
# Cache Directories
# ===========================================
cache/*
!cache/index.html
!cache/.htaccess

# Application cache
b2c/cache/*
!b2c/cache/index.html
!b2c/cache/.htaccess

agent/application/cache/*
!agent/application/cache/index.html

# Custom temp files
b2c/custom/temp/*
!b2c/custom/temp/.gitkeep

